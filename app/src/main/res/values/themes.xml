<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.WhatsApp" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryDark</item>
        <item name="colorOnPrimary">#090808</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/colorSecondVariant</item>
        <item name="colorSecondaryVariant">@color/colorSecondVariant</item>
        <item name="colorOnSecondary">@color/white</item>


        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="AplicaçãoActivity" parent="Theme.AppCompat.DayNight.NoActionBar">

        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryDark</item>
        <item name="android:colorBackground">@color/white</item>
        <item name="android:textColor">#050405</item>
        <item name="android:colorForeground">@color/white</item>

        <item name="colorSecondary">@color/colorSecondVariant</item>
        <item name="colorSecondaryVariant">@color/colorSecondVariant</item>
        <item name="colorOnSecondary">@color/white</item>

        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>


    </style>

    <style name="Theme.WhatsApp.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.WhatsApp.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.WhatsApp.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


    <style name="layerWhats" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:splashScreenTheme" tools:targetApi="s">@drawable/layer_whats</item>

    </style>

</resources>