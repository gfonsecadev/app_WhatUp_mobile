<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.WhatsApp" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryDark</item>
        <item name="colorOnPrimary">#090808</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/colorSecondVariant</item>
        <item name="colorSecondaryVariant">@color/colorSecondVariant</item>
        <item name="colorOnSecondary">@color/white</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor" >?attr/colorPrimaryVariant</item>
        <item name="android:navigationBarColor">@color/colorPrimaryDark</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="AplicaçãoActivity" parent="Theme.AppCompat.DayNight.NoActionBar">

        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryDark</item>
        //coloração do fundo da aplicação
        <item name="android:colorBackground">@color/white</item>
        //coloração dos textos da aplicação
        <item name="android:textColor">#050405</item>
        //propriedade responsável por modificar a cor dos items da toolbar.
        <item name="android:colorForeground">@color/white</item>

        <item name="colorSecondary">@color/colorSecondVariant</item>
        <item name="colorSecondaryVariant">@color/colorSecondVariant</item>
        <item name="colorOnSecondary">@color/white</item>

        <!--cor barra de status-->
        <item name="android:statusBarColor" >?attr/colorPrimaryVariant</item>
        <!--cor barra de navegação-->
        <item name="android:navigationBarColor">@color/colorPrimaryDark</item>
        <!--transparência barra de navegação-->
        <item name="android:windowTranslucentNavigation">false</item>
        <!--transparência barra de status-->
        <item name="android:windowTranslucentStatus">false</item>

    </style>

    <style name="Theme.WhatsApp.NoActionBar" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
    </style>

    <style name="Theme.WhatsApp.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.WhatsApp.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


    <style name="Theme.layerWhats" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:statusBarColor">@color/splashColor</item>
        <item name="android:navigationBarColor">@color/splashColor</item>
    </style>

</resources>